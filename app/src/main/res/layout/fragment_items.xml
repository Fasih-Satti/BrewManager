<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.ItemsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/waiterNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiter: "
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/orderForTableTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Table no:"
            android:textColor="@color/brown"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|right"
            android:src="@drawable/check_list"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="checklist" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Items"
                android:textColor="@color/brown"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items:"
            android:textColor="@color/brown"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gridRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/reserveNewTableTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reserve new table by clicking here"
            android:textColor="@android:color/white"
            android:background="@color/brown"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:layout_gravity="center" />
    </LinearLayout>
</FrameLayout>

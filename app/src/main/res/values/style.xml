<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="BottomNavItemActive">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavItemInactive">
        <item name="android:textSize">10sp</item>
    </style>

        <!-- Define Font Styles -->
        <style name="OrderNameStyle">
            <item name="android:textSize">18sp</item>
            <item name="android:textColor">#4E342E</item>
            <item name="android:textStyle">bold</item>
        </style>

        <style name="WaiterTextStyle">
            <item name="android:textSize">14sp</item>
            <item name="android:textColor">#795548</item>
        </style>

        <style name="OrderDetailsStyle">
            <item name="android:textSize">14sp</item>
            <item name="android:textColor">#8D6E63</item>
        </style>

        <style name="QuantityStyle">
            <item name="android:textSize">14sp</item>
            <item name="android:textColor">#4E342E</item>
        </style>

    </resources>


<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient Fill -->
    <gradient
        android:startColor="@color/light_brown"
        android:endColor="@color/brown"
        android:angle="45"/>

    <!-- Rounded Corners -->
    <corners android:radius="10dp"/>

    <!-- Stylish Stroke -->
    <stroke
        android:color="@color/brown"
        android:width="2dp"
        android:dashGap="4dp"
        android:dashWidth="6dp"/>

    <!-- Shadow Effect -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
